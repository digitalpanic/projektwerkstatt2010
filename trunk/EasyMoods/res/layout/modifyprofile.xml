<?xml version="1.0" encoding="utf-8"?>


<TableLayout android:id="@+id/TableLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
<TableRow android:id="@+id/TableRow00" android:layout_width="wrap_content" android:layout_height="wrap_content">
<TextView android:id="@+id/TextView00" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/profileCaption" android:textSize="60px" android:textStyle="bold"></TextView>
</TableRow>
<TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingBottom="20px" android:paddingTop="20px"></TextView>
<EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:lines="1" android:hint="Title" android:id="@+id/profileTitle" android:minWidth="330px"></EditText>
</TableRow>
<TableRow android:id="@+id/TableRow02" android:layout_width="wrap_content" android:layout_height="wrap_content">
<TextView android:id="@+id/TextView02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingRight="80px" android:paddingTop="20px" android:paddingBottom="20px"></TextView>
<EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:width="200px" android:lines="1" android:hint="Description" android:id="@+id/profileDesc"></EditText>
</TableRow>
<TableRow android:id="@+id/TableRow03" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:id="@+id/TextView03" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Red" android:padding="15px"></TextView>

<SeekBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:max="255" android:padding="10px" android:progress="255" android:id="@+id/profileSeekRed"></SeekBar>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="255" android:textStyle="bold" android:textSize="20px" android:padding="5px" android:id="@+id/profileRVal"></TextView>
</TableRow>
<TableRow android:id="@+id/TableRow04" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:id="@+id/TextView04" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Green" android:padding="15px"></TextView>
<SeekBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:max="255" android:padding="10px" android:progress="255" android:id="@+id/profileSeekGreen"></SeekBar>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="5px" android:text="255" android:textSize="20px" android:textStyle="bold" android:id="@+id/profileGVal"></TextView>
</TableRow>

<TableRow android:id="@+id/TableRow05" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:id="@+id/TextView05" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Blue" android:padding="15px"></TextView>
<SeekBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:max="255" android:padding="10px" android:progress="255" android:id="@+id/profileSeekBlue"></SeekBar>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="5px" android:text="255" android:textStyle="bold" android:textSize="20px" android:id="@+id/profileBVal"></TextView>
</TableRow>

<TableRow android:id="@+id/TableRow06" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:id="@+id/TextView06" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dim" android:padding="15px"></TextView>
<SeekBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:max="255" android:padding="10px" android:progress="255" android:id="@+id/profileSeekDim"></SeekBar>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="5px" android:text="255" android:textSize="20px" android:textStyle="bold" android:id="@+id/profileDVal"></TextView>
</TableRow>

<TableRow android:id="@+id/TableRow08" android:layout_width="wrap_content" android:layout_height="wrap_content">
<TextView android:id="@+id/TextView09" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="15px" android:text="Preview"></TextView>
<ListView android:layout_width="200px" android:layout_height="50px" android:background="#ffffffff" android:id="@+id/profilePreview"></ListView>
</TableRow>

<TableRow android:id="@+id/TableRow12" android:layout_width="wrap_content" android:layout_height="wrap_content">
<TextView android:id="@+id/TextView11" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
</TableRow>

<TableRow android:id="@+id/TableRow09" android:layout_width="wrap_content" android:layout_height="wrap_content">
<TextView android:id="@+id/TextView07" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Scent" android:paddingLeft="15px" android:paddingTop="65px"></TextView>
<RadioGroup android:id="@+id/RadioGroup01" android:layout_width="wrap_content" android:layout_height="wrap_content">
<RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:id="@+id/profileScentNone" android:text="None"></RadioButton>
<RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Lemon" android:id="@+id/profileScentLemon"></RadioButton>
<RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/profileScentFresh" android:text="Fresh"></RadioButton>
</RadioGroup>
</TableRow>

<TableRow android:id="@+id/TableRow13" android:layout_width="wrap_content" android:layout_height="wrap_content">
<TextView android:id="@+id/TextView12" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
</TableRow>

<LinearLayout android:id="@+id/LinearLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content">
<Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Done" android:id="@+id/profileDone" android:width="230px"></Button>
<Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Cancel" android:id="@+id/profileCancel" android:width="230px"></Button>
</LinearLayout>
</TableLayout>
