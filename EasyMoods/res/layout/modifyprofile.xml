<?xml version="1.0" encoding="utf-8"?>


<TableLayout android:id="@+id/TableLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
<TableRow android:id="@+id/TableRow00" android:layout_width="wrap_content" android:layout_height="wrap_content">
<TextView android:id="@+id/TextView00" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
</TableRow>
<TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingBottom="20px" android:paddingTop="20px"></TextView>
<EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Title" android:id="@+id/title"></EditText>
</TableRow>
<TableRow android:id="@+id/TableRow02" android:layout_width="wrap_content" android:layout_height="wrap_content">
<TextView android:id="@+id/TextView02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingRight="80px" android:paddingTop="20px" android:paddingBottom="20px"></TextView>
<EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Description" android:maxLines="1" android:width="200px" android:id="@+id/desc"></EditText>
</TableRow>
<TableRow android:id="@+id/TableRow03" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:id="@+id/TextView03" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Red" android:padding="15px"></TextView>

<SeekBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:max="255" android:padding="10px" android:id="@+id/seekRed"></SeekBar>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="255" android:textStyle="bold" android:textSize="20px" android:padding="5px" android:id="@+id/rVal"></TextView>
</TableRow>
<TableRow android:id="@+id/TableRow04" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:id="@+id/TextView04" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Green" android:padding="15px"></TextView>
<SeekBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:max="255" android:padding="10px" android:id="@+id/seekGreen"></SeekBar>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="5px" android:text="255" android:textSize="20px" android:textStyle="bold" android:id="@+id/gVal"></TextView>


<TextView android:id="@+id/TextView09" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Preview:"></TextView>
</TableRow>
<TableRow android:id="@+id/TableRow05" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:id="@+id/TextView05" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Blue" android:padding="15px"></TextView>
<SeekBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:max="255" android:padding="10px" android:id="@+id/seekBlue"></SeekBar>

<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="5px" android:text="255" android:textStyle="bold" android:textSize="20px" android:id="@+id/bVal"></TextView>
<ListView android:background="#ff0000ff" android:layout_width="200px" android:layout_height="50px" android:id="@+id/preview"></ListView>
</TableRow>
<TableRow android:id="@+id/TableRow06" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:id="@+id/TextView06" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dim" android:padding="15px"></TextView>
<SeekBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:max="255" android:padding="10px" android:id="@+id/seekDim"></SeekBar>

<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="5px" android:text="255" android:textSize="20px" android:textStyle="bold" android:id="@+id/dVal"></TextView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ff0000ff" android:id="@+id/hexValue"></TextView>
</TableRow>
<TableRow android:id="@+id/TableRow07" android:layout_width="wrap_content" android:layout_height="wrap_content">
<TextView android:id="@+id/TextView07" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Scent" android:paddingLeft="10px" android:paddingTop="40px"></TextView>
<RadioGroup android:id="@+id/RadioGroup01" android:layout_width="wrap_content" android:layout_height="wrap_content">

<RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/scent1" android:text="Fresh"></RadioButton>
<RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/scent2" android:text="Lemon"></RadioButton>

</RadioGroup>
<TextView android:id="@+id/TextView08" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingBottom="10px" android:paddingTop="10px" android:paddingRight="100px"></TextView>
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Save" android:id="@+id/save"></Button>
</TableRow>
<TableRow android:id="@+id/TableRow08" android:layout_width="wrap_content" android:layout_height="wrap_content"></TableRow>

</TableLayout>
